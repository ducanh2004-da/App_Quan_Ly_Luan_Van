<UserControl x:Class="WinformProject.View.Design.StudentButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinformProject.View.Design"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="120">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnHome" Click="btnHome_Click" Grid.Row="0" Content="Home" IsEnabled="False"/>
        <Button x:Name="btnThongTin" Click="btnThongTin_Click" Grid.Row="1" Content="Thông Tin Cá Nhân" IsEnabled="True"/>
        <Button x:Name="btnDKDT" Click="btnDKDT_Click" Grid.Row="2" Content="Đăng Ký Đề Tài" IsEnabled="True"/>
        <Button x:Name="btnBaoCao" Click="btnBaoCao_Click" Grid.Row="3" Content="Báo Cáo" IsEnabled="True"/>
    </Grid>
</UserControl>
