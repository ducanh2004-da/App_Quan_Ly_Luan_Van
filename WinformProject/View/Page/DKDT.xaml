<UserControl x:Class="WinformProject.View.Page.DKDT"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinformProject.View.Page"
             xmlns:uc="clr-namespace:WinformProject.View.Design"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="LightYellow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <uc:DKDTBar x:Name="DKDTBar" Grid.Row="1"/>
        <DataGrid Grid.Row="2"/>
        <Button Grid.Row="3" x:Name="btn_DangKy" Content="Đăng Ký" Click="ButtonDangKy_Click" Height="50" Width="100" VerticalAlignment="Center" HorizontalAlignment="Center" />
        
    </Grid>
</UserControl>
